{
    "openapi": "3.0.0",
    "info": {
        "title": "Tripe Auth API Docs",
        "description": "This is the official API documentation for the Tripe Authentication System. It provides detailed information about tall the available endpoints.",
        "contact": {
            "email": "dev@tripe.com"
        },
